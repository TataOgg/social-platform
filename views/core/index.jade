extends layout 

append htmltag
    html(ng-app='WeTalk')
append header
    include header
append content
    div(ng-controller='IndexController')
        .row
            .small-8.columns.small-centered
                h5 Insert the text you want
                include entries/entry
        .row
            .small-8.columns.small-centered
                h6 Your entries
                each entry in entries
                    a(href="", ng-click='getReplies("' + entry.id + '")')= entry.entry
                    br
                div(ng-repeat='entry in entries')
                    p {{entry.reply}}
append scripts
    script(type='text/javascript', src="/javascripts/core/entries_module.js")