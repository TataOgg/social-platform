doctype 5
block htmltag
    html
        head
            title= title

            // Styles files
            link(rel="stylesheet", href='/stylesheets/foundation/foundation.min.css')
            link(rel="stylesheet", href='/stylesheets/foundation/normalize.css')
            link(rel='stylesheet', href='/stylesheets/style.css')

            // Custom styles
            each styleFile in styleFiles
                link(rel='stylesheet', href= styleFile)

            // JavaScripts files
            script(type='text/javascript', src="/socket.io/socket.io.js") 
            script(type='text/javascript', src="/javascripts/vendor/angular.js")
            script(type='text/javascript', src="/javascripts/vendor/angular-resource.js")
        body
            .row
                #header.small-12.columns
                    block header
            .row
                #wrapper.small-8.columns.small-centered
                    #content
                        block content
                            block entry
                    block widgets
            block footer

            block scripts
                script(type='text/javascript', src="/javascripts/core/app.js")
                script(type='text/javascript', src="/javascripts/vendor/custom.modernizr.js")
                script(type='text/javascript', src="/javascripts/vendor/jquery.js")
                script(type='text/javascript', src="/javascripts/vendor/zepto.js")
                script(type='text/javascript', src="/javascripts/vendor/foundation/foundation.min.js")
                script(type='text/javascript', src="/javascripts/vendor/foundation/foundation.forms.js")
                script(type='text/javascript', src="/javascripts/vendor/foundation/foundation.dropdown.js")
                script(type='text/javascript', src="/javascripts/vendor/foundation/foundation.reveal.js")
                script(type='text/javascript', src="/javascripts/vendor/foundation/foundation.section.js")
                script(type='text/javascript', src="/javascripts/vendor/foundation/foundation.topbar.js")                

            // Custom javascripts
            each jsFile in jsFiles
                script(type='text/javascript', src= jsFile)
                    
            script(type='text/javascript').
                $(document).foundation();