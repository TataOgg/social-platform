doctype 5
block htmltag
    html
        head
            title= title
            meta(http-equiv='X-UA-Compatible', content='IE=edge')
            meta(name='viewport', content='width=device-width, initial-scale=1')

            // Styles files
            link(rel="stylesheet", href='/stylesheets/vendor/bootstrap/css/bootstrap.min.css')
            link(rel='stylesheet', href='/stylesheets/style.css')

            // Custom styles
            each styleFile in styleFiles
                link(rel='stylesheet', href= styleFile)

            // JavaScripts files
            script(type='text/javascript', src="/socket.io/socket.io.js") 
            script(type='text/javascript', src="/javascripts/vendor/angular.js")
            script(type='text/javascript', src="/javascripts/vendor/angular-resource.js")
        body
            .navbar.navbar-inverse(role='navigation')
                .container
                    .navbar-header
                        button(type='button', class='navbar-toggle', data-toggle='collapse', data-target='.navbar-collapse')
                            .span(class='sr-only') Toggle navigation
                            .span(class='icon-bar')
                            .span(class='icon-bar')
                            .span(class='icon-bar')
                        a.navbar-brand(href='/') #{title}
                    .collapse.navbar-collapse
                        ul.nav.navbar-nav
                            each section in sections
                                li.dropdown
                                    a.dropdown-toggle(href='', data-toggle='dropdown')= section.name
                                    ul.dropdown-menu
                                        each s in section.sections
                                            li
                                                a(href=s.route)= s.name
            .container
                .row
                    #header.col-md-12
                        block header
                .row
                    #wrapper.col-md-offset-2.col-md-8
                        #content
                            block content
                                block entry
                        block widgets
            block footer

            block scripts
                script(type='text/javascript', src="/javascripts/core/app.js")
                script(type='text/javascript', src="/javascripts/vendor/jquery.js")                
                script(type='text/javascript', src="/javascripts/vendor/bootstrap/js/bootstrap.min.js")                               

            // Custom javascripts
            each jsFile in jsFiles
                script(type='text/javascript', src= jsFile)